<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs offset-4 col-4">
    <h2 class="text-center">Log in to your account</h2>
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <div class="row m-0 d-flex justify-content-between">
      <%= f.input :remember_me, as: :boolean, class: 'col-6' if devise_mapping.rememberable? %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      <% end %>
    </div>

    <div class="form-actions mb-3">
      <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block' %>
    </div>
    <p class="text-right mt-4">Not a member yet?
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <strong><%= link_to "Register", new_registration_path(resource_name) %></strong>
    <% end %>
    </p>
  </div>
<% end %>

