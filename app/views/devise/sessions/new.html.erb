<div class="container">
  <div class="row">
    <div class="offset-4 col-4">
      <div class="form-login">
       <h2>Log in to your account</h2>
       <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        placeholder: "bob@gmail.com",
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        placeholder: "••••••",
                        input_html: { autocomplete: "current-password" } %>
          </div>

          <div class="row m-0 d-flex justify-content-between">
            <%= f.input :remember_me, as: :boolean, class: 'col-6' if devise_mapping.rememberable? %>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
            <% end %>
          </div>

          <div class="form-actions mb-3">
            <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
          </div>

          <p class="text-right">Not a member yet?
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <strong><%= link_to "Register", new_registration_path(resource_name) %></strong>
          <% end %>
         </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
