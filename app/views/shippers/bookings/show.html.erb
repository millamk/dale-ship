<div class="container">
  <div class="row">
    <div class="col-6">
      <h1>Shipment information</h1>

      <h4 class="mt-3">Booking number: #<%= @booking.id %></h4>

      <div class="d-flex align-items-center">
        <div>
          <p class="m-0"><span style="color:grey; font-size:13px"><i class="fas fa-anchor"></i> DEPARTURE</p></span> <%= @booking.freight.origin %>
        </div>

        <div class="px-5">
          <span style="color:#DEE5EA"><i class="fas fa-arrow-right"></i></span>
        </div>

        <div>
          <p class="m-0"><span style="color:grey; font-size:13px"><i class="fas fa-anchor"></i> ARRIVAL</p></span> <%= @booking.freight.destination %>
        </div>
      </div>

      <div class="mt-2">
        <p><i class="fas fa-calendar-day"></i> READY TO LOAD:
        <%= @booking.freight.ready_to_load.strftime('%d %b, %y') %></p>
      </div>

      <div>
        <i class="fas fa-box"></i> CARGO DETAILS:
        <p class="m-0">Type of shipment: <%= @booking.freight.type_of_shipment %></p>
        <p>Container: <%= @booking.freight.container_pack %></p>
      </div>

      <div>
        <p class="m-0 border-bottom">OCEAN FREIGHT</p>
        <p>TOTAL: $<%= @booking.freight.price %></p>
      </div>
    </div>
    <div class="col-6">
      <%= render 'shared/profile-form' %>
    </div>
  </div>
</div>
