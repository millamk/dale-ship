<div class="banner">
  <div class="container">
    <h1>FIND THE BEST INTERNATIONAL FREIGHT QUOTES</h1>
    <h4 class="mb-4"><span id="banner-typed-text"></span></h4>

  <div class="search-title">
    <label for="origin" class="origin-search">ORIGIN</label>
    <label for="Destination" class="destination-search">DESTINATION</label>
    <span class="search-space"></span>
    <label for="Type of shipments" class="type-search">TYPE</label>
  </div>

  <div class="dflex formhome">
      <%= form_tag search_path, class: "form-inline  mb-3",  method: :get do %>
        <%= select_tag 'origin', options_for_select(Port.all.collect {|port| port.name}), include_blank: true, class: 'form-control mr-sm-2', value: 'Origin', label: 'ORIGIN'  %>
        <%= select_tag 'destino', options_for_select(Port.all.collect {|port| port.name}), include_blank: true, class: 'form-control mr-sm-2', value: 'Destination', label: 'DESTINATION' %>
        <%= text_field_tag :ready_to_load, params[:ready_to_load], class: "datepicker form-control", placeholder: "Ready to load"%>
        <%= select_tag 'type_of_shipment', options_for_select(['FCL', 'LCL']), include_blank: true, class: 'form-control mr-sm-2 ml-sm-2', placeholder: 'Type of Shipment'  %>
        <%= submit_tag 'Search', class: 'btn-search' %>
        <% end %>
        </div>
      </div>
    </div>

