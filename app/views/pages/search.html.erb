  <div class="container">
    <div class="search-title">
      <label for="Origin" class="origin-search">ORIGIN</label>
      <label for="Destination" class="destination-search">DESTINATION</label>
      <span class="search-space"></span>
      <label for="Type of shipments" class="type-search">TYPE</label>
    </div>
  </div>

  <div class="container">
	 <div class="dflex formhomesearch">
	   <%= form_tag search_path, class: "form-inline  mb-3",  method: :get do %>
		 <%= select_tag 'origin', options_for_select(Port.all.collect {|port| port.name}), include_blank: true, class: 'form-control mr-sm-2 input-field' %>
		 <%= select_tag 'destino', options_for_select(Port.all.collect {|port| port.name}), include_blank: true, class: 'form-control mr-sm-2 input-field' %>
     <%= text_field_tag :ready_to_load, params[:ready_to_load], class: "datepicker form-control input-field", placeholder: "Ready to Load"%>
     <%= select_tag 'type_of_shipment', options_for_select(['FCL', 'LCL']), include_blank: true, class: 'form-control mr-sm-2 ml-sm-2 input-field' %>
		  <%= submit_tag 'Search', class: 'btn-search' %>
		  <% end %>
	 </div>
  </div>

<div class="search-results">
	<% @search.each do |freight| %>
	<div class="card-search">
		<div class="box-left">
			<h6 class="card-title">Company name</h6>
			<div class="d-flex origindestination">
				<p class="card-text"> <%= freight.origin %></p>
				<div class="lineroute">
					<i class="fas fa-anchor"></i>
					<span class="routeeicon"> <span style="color:#4285F4"><i class="fas fa-ship"></i> </span></span>
					<i class="fas fa-anchor"></i>
					<hr>
				</div>
				<p class="card-text"> <%= freight.destination %></p>
			</div>
			<div>
				<span class="search-date">Expire date: <%=freight.expire_date.strftime('%d %b, %Y')%></span>
			</div>
		</div>
		<div class="box-right">
			<p>
				<%=freight.type_of_shipment %> <%=freight.container_pack %>
			</p>
			<div class="bookbtn">
				<%= simple_form_for [freight, @booking]  do |f| %>
  				<p class="ppp"> $ <%= freight.price %> </p>
  				<%= f.submit "Book now", class: 'btn-book-now' %>
			 <% end %>
			</div>
		</div>
	</div>
	<% end %>
</div>

<div class="container">
  <div
  id="map"
  style="width: 90%; height: 15rem; margin-left: 3.5rem; "
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
